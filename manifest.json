{
  "manifest_version": 3,
  "name": "Citation Snatcher",
  "version": "1.0",
  "description": "A browser extension to capture and manage citations from web pages.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Snag Citation"
  },
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["browser-polyfill.min.js", "content.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "citation-snatcher@lochanank.com",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
